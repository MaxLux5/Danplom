<UserControl x:Class="Danplom.View.Components.Requests.RequestAdminListComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Danplom.View.Components.Requests"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView ItemsSource="{Binding Requests}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="RequiredQuantity" DisplayMemberBinding="{Binding RequiredQuantity}"/>
                    <GridViewColumn Header="TimeToComplete" DisplayMemberBinding="{Binding TimeToComplete}"/>
                    <GridViewColumn Header="RequestStatus" DisplayMemberBinding="{Binding RequestStatus}"/>
                    <GridViewColumn Header="DetailId" DisplayMemberBinding="{Binding DetailId}"/>
                    <GridViewColumn Header="WorkerId" DisplayMemberBinding="{Binding WorkerId}"/>
                </GridView>
            </ListView.View>

            <ListView.Resources>
                <ContextMenu  x:Key="ItemContextMenu">
                    <MenuItem Header="Добавить" 
                              Command="{Binding Path=DataContext.AddRequestCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListView}}"/>
                    <MenuItem Header="Удалить" 
                              Command="{Binding Path=DataContext.RemoveRequestCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListView}}"
                              CommandParameter="{Binding .}"/>
                </ContextMenu>
            </ListView.Resources>
            
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                </Style>
            </ListView.ItemContainerStyle>

            <!--Контекстное меню для всей ListView-->
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить" Command="{Binding AddRequestCommand}"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
    </Grid>
</UserControl>
